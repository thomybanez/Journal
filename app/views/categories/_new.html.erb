<h3 style="width: 200px;padding: 10px;margin: 0px;background-color: #036642; color: white; font-family: arial;">New Category</h3>

<%= form_with scope: :category, url: categories_create_path, html:{autocomplete: 'off'} do |form| %>

  <% if @categories_new.errors.any? %>
  <ul>
    <% @categories_new.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>


  <%= form.label :name %><br/>
  <%= form.text_field :name %><br/>

  <!-- <%= form.label :user_id %><br/>
  <%= form.text_field :user_id %><br/> -->

  <%= form.submit %>
<% end %>